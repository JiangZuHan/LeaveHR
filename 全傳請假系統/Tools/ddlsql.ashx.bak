        string DUSER;
        string MUSER;
        string GUSER;
        for (int i = 0; i < dt.Rows.Count; i++)
        {
            LUSER = dt.Rows[i]["LUSERID"].ToString();//班長
            DataTable d1 = querydatatable(LUSER);
            if (d1.Rows.Count > 0)
            {
